@model Northwind.EntityModels.Category

@{
    ViewData["Title"] = "Category Detail - " + Model.CategoryName;
}
<link rel="stylesheet" href="~/css/category-detail.css" asp-append-version="true" />

<div class="category-container">
    <h2 class="category-title">@Model.CategoryName</h2>
    <p class="category-description">@Model.Description</p>

    @if (Model.Products.Any())
    {
        <h3>Products in this category:</h3>
        <ul class="product-list">
            @foreach (var product in Model.Products)
            {
                <li>
                    <a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@product.ProductId" class="product-link">
                        @product.ProductName
                    </a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>There are no products in this category.</p>
    }
</div>